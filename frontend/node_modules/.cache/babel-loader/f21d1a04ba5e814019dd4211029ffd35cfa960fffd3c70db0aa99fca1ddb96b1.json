{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport axios from 'axios';\nexport default {\n  name: 'App',\n  data() {\n    return {\n      mensajes: [],\n      nuevoMensaje: ''\n    };\n  },\n  mounted() {\n    this.obtenerMensajes();\n  },\n  methods: {\n    obtenerMensajes() {\n      axios.get('http://localhost:3000/api/mensajes').then(res => {\n        this.mensajes = res.data;\n      }).catch(err => console.error(err));\n    },\n    enviarMensaje() {\n      if (this.nuevoMensaje.trim() === '') return;\n      axios.post('http://localhost:3000/api/mensajes', {\n        texto: this.nuevoMensaje\n      }).then(res => {\n        this.mensajes.push(res.data);\n        this.nuevoMensaje = '';\n      }).catch(err => console.error(err));\n    }\n  }\n};","map":{"version":3,"names":["axios","name","data","mensajes","nuevoMensaje","mounted","obtenerMensajes","methods","get","then","res","catch","err","console","error","enviarMensaje","trim","post","texto","push"],"sources":["/Users/rc/vue-multi-project/frontend/src/App.vue"],"sourcesContent":["<template>\n  <div id=\"app\">\n    <h1>Mensajes</h1>\n\n    <ul>\n      <li v-for=\"mensaje in mensajes\" :key=\"mensaje.id\">\n        {{ mensaje.texto }}\n      </li>\n    </ul>\n\n    <input v-model=\"nuevoMensaje\" placeholder=\"Escribe un mensaje\" />\n    <button @click=\"enviarMensaje\">Enviar</button>\n  </div>\n</template>\n\n<script>\nimport axios from 'axios';\n\nexport default {\n  name: 'App',\n  data() {\n    return {\n      mensajes: [],\n      nuevoMensaje: '',\n    };\n  },\n  mounted() {\n    this.obtenerMensajes();\n  },\n  methods: {\n    obtenerMensajes() {\n      axios\n        .get('http://localhost:3000/api/mensajes')\n        .then((res) => {\n          this.mensajes = res.data;\n        })\n        .catch((err) => console.error(err));\n    },\n    enviarMensaje() {\n      if (this.nuevoMensaje.trim() === '') return;\n\n      axios\n        .post('http://localhost:3000/api/mensajes', {\n          texto: this.nuevoMensaje,\n        })\n        .then((res) => {\n          this.mensajes.push(res.data);\n          this.nuevoMensaje = '';\n        })\n        .catch((err) => console.error(err));\n    },\n  },\n};\n</script>\n\n<style>\n#app {\n  font-family: Arial, sans-serif;\n  padding: 20px;\n}\ninput {\n  padding: 5px;\n  margin-right: 5px;\n}\nbutton {\n  padding: 5px 10px;\n}\n</style>\n"],"mappings":";AAgBA,OAAOA,KAAI,MAAO,OAAO;AAEzB,eAAe;EACbC,IAAI,EAAE,KAAK;EACXC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,QAAQ,EAAE,EAAE;MACZC,YAAY,EAAE;IAChB,CAAC;EACH,CAAC;EACDC,OAAOA,CAAA,EAAG;IACR,IAAI,CAACC,eAAe,CAAC,CAAC;EACxB,CAAC;EACDC,OAAO,EAAE;IACPD,eAAeA,CAAA,EAAG;MAChBN,KAAI,CACDQ,GAAG,CAAC,oCAAoC,EACxCC,IAAI,CAAEC,GAAG,IAAK;QACb,IAAI,CAACP,QAAO,GAAIO,GAAG,CAACR,IAAI;MAC1B,CAAC,EACAS,KAAK,CAAEC,GAAG,IAAKC,OAAO,CAACC,KAAK,CAACF,GAAG,CAAC,CAAC;IACvC,CAAC;IACDG,aAAaA,CAAA,EAAG;MACd,IAAI,IAAI,CAACX,YAAY,CAACY,IAAI,CAAC,MAAM,EAAE,EAAE;MAErChB,KAAI,CACDiB,IAAI,CAAC,oCAAoC,EAAE;QAC1CC,KAAK,EAAE,IAAI,CAACd;MACd,CAAC,EACAK,IAAI,CAAEC,GAAG,IAAK;QACb,IAAI,CAACP,QAAQ,CAACgB,IAAI,CAACT,GAAG,CAACR,IAAI,CAAC;QAC5B,IAAI,CAACE,YAAW,GAAI,EAAE;MACxB,CAAC,EACAO,KAAK,CAAEC,GAAG,IAAKC,OAAO,CAACC,KAAK,CAACF,GAAG,CAAC,CAAC;IACvC;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}